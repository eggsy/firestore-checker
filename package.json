  },
  "bugs": {
    "url": "https://github.com/eggsy/firestore-checker/issues"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn src/index.ts",
    "build": "cross-env NODE_ENV=production rimraf dist && yarn --silent && tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 src/assets/*.json dist/",
    "start": "cd dist && node index.js"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "consola": "^2.15.3",
    "dotenv": "^10.0.0",
    "firebase": "^9.5.0",
    "get-next-date": "^1.0.0",
    "moment": "^2.29.1",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "spotify-to-youtube": "^1.0.2",
    "spotify-web-api-node": "^5.0.2",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "ts-node-dev": "^1.1.8"
  }
}
